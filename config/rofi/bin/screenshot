#!/usr/bin/env bash

rofi_command="rofi -theme $HOME/.config/rofi/config/screenshot.rasi"

# Buttons
layout=$(grep BUTTON <"$HOME/.config/rofi/config/screenshot.rasi" | cut -d '=' -f2 | tr -d '[:blank:],*/')
if [[ "$layout" == "TRUE" ]]; then
	screen=""
	area=""
	window="缾"
	inthree="靖"
	inten="福"
else
	screen=" Capture Desktop"
	area=" Capture Area"
	window="缾 Capture Window"
	inthree="靖 Take in 3s"
	inten="福 Take in 10s"
fi

# Variable passed to rofi
options="$screen\n$area\n$window\n$inthree\n$inten"

chosen="$(echo -e "$options" | $rofi_command -p 'Take A Shot' -dmenu -selected-row 0)"
case $chosen in
"$screen")
	screenshot full
	;;
"$area")
	screenshot area
	;;
"$window")
	screenshot window
	;;
"$inthree")
	screenshot -pqs 3 full
	;;
"$inten")
	screenshot -ps 10 full
	;;
esac
