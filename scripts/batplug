#!/usr/bin/env bash

is_charging=$1
current_percentage=$(acpi | grep -Po '[0-9]{1,3}(?=%)')

NOTIFICATION_ID=69

if ((is_charging == 1)); then
	notify-send "Charging" "$current_percentage% of battery charged." -u low -i "$HOME/.local/share/icons/battery-charging.png" -r "$NOTIFICATION_ID"
	paplay "/usr/share/sounds/Yaru/stereo/power-plug.oga"
elif ((is_charging == 0)); then
	notify-send "Disconnected" "$current_percentage% of battery remaining." -u low -i "$HOME/.local/share/icons/battery.png" -r "$NOTIFICATION_ID"
	paplay "/usr/share/sounds/Yaru/stereo/power-unplug.oga"
fi
